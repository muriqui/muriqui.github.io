{
  "devDependencies": {
    "@babel/core": "^7.15.4",
    "@babel/preset-env": "^7.15.4",
    "@tailwindcss/typography": "^0.4.1",
    "autoprefixer": "^10.3.3",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.27.5",
    "concurrently": "^6.2.1",
    "css-loader": "^6.2.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "mini-css-extract-plugin": "^2.2.0",
    "npm-watch": "^0.11.0",
    "postcss": "^8.3.6",
    "postcss-loader": "^6.1.1",
    "postcss-preset-env": "^6.7.0",
    "sass": "^1.39.0",
    "sass-loader": "^12.1.0",
    "tailwindcss": "^2.2.9",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.8.0"
  },
  "scripts": {
    "build:webpack": "NODE_ENV=production webpack --config webpack.config.js",
    "build:jekyll": "cd docs && bundle exec jekyll build",
    "build": "npm run build:webpack && npm run build:jekyll",
    "start": "concurrently 'npm run watch' 'browser-sync start --config browsersync.config.js'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm-watch"
  },
  "watch": {
    "build": {
      "patterns": [
        "docs",
        "src"
      ],
      "extensions": "html,md,css,scss,js,yml",
      "ignore": [
        "docs/_site",
        "docs/assets",
        "docs/vendor"
      ]
    }
  }
}
